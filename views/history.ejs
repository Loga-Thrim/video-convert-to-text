<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>History</title>

    <style>
        .container{
            padding: 50px;
        }
        a{
            font-size: 16px;
            color: white;
            text-decoration: none;
            padding: 7px 10px;
            background: rgb(255, 217, 0);
            border-radius: 5px;
            transition: .1s;
        }
        a:hover{
            color: white;
            text-decoration: none;
            background: rgb(255, 229, 81);
        }
    </style>
</head>
<body>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ลำดับ</th>
                    <th scope="col">หัวข้อข่าว</th>
                    <th scope="col">เวลาที่ลง</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody id="list">
            </tbody>
        </table>
    </div>

    <script>
        let dom = "";
        const arr = <%-JSON.stringify(data)%>;
        arr.forEach((item, index)=>{
            dom += `<tr>
                <td>${index+1}</td>
                <td>${item.name}</td>
                <td>${item.time}</td>
                <td><a href='/history/${item.id}'>ดู Transcript</a></td>
            </tr>`;

            if(index == arr.length-1) document.getElementById("list").innerHTML = dom;
        })
    </script>
</body>
</html>